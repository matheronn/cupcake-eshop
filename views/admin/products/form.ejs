<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Cupcake E-shop</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../../partials/admin-nav') %>

    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white">
                        <h4 class="mb-0"><%= product ? 'Editar' : 'Novo' %> Produto</h4>
                    </div>
                    <div class="card-body p-4">
                        <% if (error) { %>
                            <div class="alert alert-danger alert-dismissible fade show">
                                <%= error %>
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        <% } %>

                        <form action="<%= product ? `/admin/products/edit/${product.id}` : '/admin/products/new' %>" 
                              method="POST" enctype="multipart/form-data">
                            
                            <div class="mb-3">
                                <label for="nome" class="form-label">Nome do Produto *</label>
                                <input type="text" class="form-control" id="nome" name="nome" 
                                       value="<%= product ? product.nome : '' %>" required>
                            </div>

                            <div class="mb-3">
                                <label for="descricao" class="form-label">Descrição</label>
                                <textarea class="form-control" id="descricao" name="descricao" 
                                          rows="3"><%= product ? product.descricao : '' %></textarea>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="preco" class="form-label">Preço (R$) *</label>
                                    <input type="number" class="form-control" id="preco" name="preco" 
                                           step="0.01" min="0.01" 
                                           value="<%= product ? product.preco : '' %>" required>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label for="estoque" class="form-label">Estoque</label>
                                    <input type="number" class="form-control" id="estoque" name="estoque" 
                                           min="0" value="<%= product ? product.estoque : '0' %>">
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="categoryId" class="form-label">Categoria</label>
                                <select class="form-select" id="categoryId" name="categoryId">
                                    <option value="">Sem categoria</option>
                                    <% categories.forEach(category => { %>
                                        <option value="<%= category.id %>" 
                                                <%= product && product.categoryId == category.id ? 'selected' : '' %>>
                                            <%= category.nome %>
                                        </option>
                                    <% }); %>
                                </select>
                            </div>

                            <div class="mb-3">
                                <label for="ingredientes" class="form-label">Ingredientes</label>
                                <textarea class="form-control" id="ingredientes" name="ingredientes" 
                                          rows="2" placeholder="Ex: farinha, açúcar, ovos, chocolate..."><%= product ? product.ingredientes : '' %></textarea>
                            </div>

                            <div class="mb-3">
                                <label for="imagem" class="form-label">Imagem do Produto</label>
                                <input type="file" class="form-control" id="imagem" name="imagem" accept="image/*">
                                <small class="text-muted">Formatos aceitos: JPG, PNG, GIF, WEBP (máx 5MB)</small>
                                <% if (product && product.imagemUrl && product.imagemUrl !== '/images/cupcake-default.jpg') { %>
                                    <div class="mt-2">
                                        <p class="text-muted small mb-1">Imagem atual:</p>
                                        <img src="<%= product.imagemUrl %>" alt="<%= product.nome %>" 
                                            style="max-width: 200px; max-height: 200px; object-fit: cover;" 
                                            class="img-thumbnail">
                                    </div>
                                <% } %>
                            </div>

                            <% if (product) { %>
                                <div class="mb-3">
                                    <label class="form-label">Status</label>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="ativo" 
                                               name="ativo" value="true" 
                                               <%= product.ativo ? 'checked' : '' %>>
                                        <label class="form-check-label" for="ativo">
                                            Produto ativo
                                        </label>
                                    </div>
                                </div>
                            <% } %>

                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-pink">
                                    <i class="bi bi-check-circle"></i> <%= product ? 'Atualizar' : 'Cadastrar' %>
                                </button>
                                <a href="/admin/products" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-circle"></i> Cancelar
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>