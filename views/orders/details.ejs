<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Cupcakes E-shop</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-pink">
        <div class="container">
            <a class="navbar-brand" href="/"><i class="bi bi-emoji-heart-eyes"></i> Cupcakes E-shop</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/products">Catálogo</a></li>
                    <li class="nav-item"><a class="nav-link" href="/cart">Carrinho</a></li>
                    <li class="nav-item"><a class="nav-link" href="/orders">Meus Pedidos</a></li>
                    <li class="nav-item"><a class="nav-link" href="/auth/logout">Sair</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container my-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Pedido #<%= order.id %></h2>
            <a href="/orders" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Voltar
            </a>
        </div>

        <div class="row">
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header bg-white">
                        <h5 class="mb-0">Itens do Pedido</h5>
                    </div>
                    <div class="card-body">
                        <% order.OrderItems.forEach(item => { %>
                            <div class="d-flex justify-content-between align-items-center mb-3 pb-3 border-bottom">
                                <div class="d-flex align-items-center">
                                    <div class="bg-pink bg-opacity-10 p-3 rounded me-3">
                                        <i class="bi bi-cup-straw text-pink fs-4"></i>
                                    </div>
                                    <div>
                                        <h6 class="mb-0"><%= item.Product.nome %></h6>
                                        <small class="text-muted">
                                            <%= item.quantidade %>x R$ <%= parseFloat(item.precoUnitario).toFixed(2).replace('.', ',') %>
                                        </small>
                                    </div>
                                </div>
                                <strong>R$ <%= parseFloat(item.subtotal).toFixed(2).replace('.', ',') %></strong>
                            </div>
                        <% }); %>
                        <div class="d-flex justify-content-between align-items-center pt-3">
                            <h5 class="mb-0">Total:</h5>
                            <h4 class="text-success mb-0">R$ <%= parseFloat(order.valorTotal).toFixed(2).replace('.', ',') %></h4>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header bg-white">
                        <h5 class="mb-0">Endereço de Entrega</h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-0"><%= order.enderecoEntrega %></p>
                        <% if (order.observacoes) { %>
                            <hr>
                            <strong>Observações:</strong>
                            <p class="mb-0"><%= order.observacoes %></p>
                        <% } %>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-header bg-white">
                        <h5 class="mb-0">Status do Pedido</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <span class="badge status-<%= order.status %> fs-6">
                                <%= order.status.replace('_', ' ').toUpperCase() %>
                            </span>
                        </div>
                        <div class="mb-3">
                            <strong>Data do pedido:</strong>
                            <p class="mb-0"><%= new Date(order.createdAt).toLocaleString('pt-BR') %></p>
                        </div>
                        <div class="mb-3">
                            <strong>Forma de pagamento:</strong>
                            <p class="mb-0"><%= order.formaPagamento.replace('_', ' ').toUpperCase() %></p>
                        </div>
                        <% if (order.dataEntregaPrevista) { %>
                            <div class="mb-3">
                                <strong>Previsão de entrega:</strong>
                                <p class="mb-0"><%= new Date(order.dataEntregaPrevista).toLocaleString('pt-BR') %></p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>