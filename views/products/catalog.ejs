<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Cupcake E-shop</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-pink sticky-top">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">
                <i class="bi bi-emoji-heart-eyes"></i> Cupcake E-shop
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Início</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/products">Catálogo</a>
                    </li>
                </ul>
                
                <ul class="navbar-nav">
                    <% if (user) { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/cart">
                                <i class="bi bi-cart"></i> Carrinho
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/auth/logout">Sair</a>
                        </li>
                    <% } else { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/auth/login">Login</a>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container my-5">
        <div class="row">
            <!-- Sidebar de Filtros -->
            <div class="col-md-3 mb-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h5 class="mb-3">Filtros</h5>
                        <form action="/products" method="GET">
                            <!-- Busca -->
                            <div class="mb-3">
                                <label class="form-label">Buscar</label>
                                <input type="text" class="form-control" name="busca" 
                                       value="<%= filters.busca || '' %>" 
                                       placeholder="Nome do cupcake...">
                            </div>

                            <!-- Categoria -->
                            <div class="mb-3">
                                <label class="form-label">Categoria</label>
                                <select class="form-select" name="categoria">
                                    <option value="">Todas</option>
                                    <% categories.forEach(cat => { %>
                                        <option value="<%= cat.id %>" 
                                                <%= filters.categoria == cat.id ? 'selected' : '' %>>
                                            <%= cat.nome %>
                                        </option>
                                    <% }); %>
                                </select>
                            </div>

                            <!-- Faixa de Preço -->
                            <div class="mb-3">
                                <label class="form-label">Preço Mínimo</label>
                                <input type="number" class="form-control" name="precoMin" 
                                       value="<%= filters.precoMin || '' %>" 
                                       step="0.01" min="0" placeholder="R$ 0,00">
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Preço Máximo</label>
                                <input type="number" class="form-control" name="precoMax" 
                                       value="<%= filters.precoMax || '' %>" 
                                       step="0.01" min="0" placeholder="R$ 100,00">
                            </div>

                            <button type="submit" class="btn btn-pink w-100 mb-2">
                                <i class="bi bi-search"></i> Filtrar
                            </button>
                            <a href="/products" class="btn btn-outline-secondary w-100">
                                <i class="bi bi-x-circle"></i> Limpar
                            </a>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-md-9">
                <h2 class="mb-4">Nossos Cupcake</h2>

                <% if (products && products.length > 0) { %>
                    <div class="row g-4">
                        <% products.forEach(product => { %>
                            <div class="col-md-4 col-lg-3">
                                <div class="card product-card h-100 shadow-sm">
                                    <a href="/products/<%= product.id %>" class="text-decoration-none">
                                        <% if (product.imagemUrl && product.imagemUrl !== '/images/cupcake-default.jpg') { %>
                                            <img src="<%= product.imagemUrl %>" class="card-img-top" alt="<%= product.nome %>"
                                                 style="height: 200px; object-fit: cover;">
                                        <% } else { %>
                                            <div class="card-img-top bg-gradient-pink d-flex align-items-center justify-content-center" 
                                                 style="height: 200px;">
                                                <i class="bi bi-cup-straw" style="font-size: 80px; color: white;"></i>
                                            </div>
                                        <% } %>
                                    </a>
                                    <div class="card-body d-flex flex-column">
                                        <h5 class="card-title">
                                            <a href="/products/<%= product.id %>" class="text-dark text-decoration-none">
                                                <%= product.nome %>
                                            </a>
                                        </h5>
                                        <% if (product.Category) { %>
                                            <p class="text-muted small mb-2">
                                                <i class="bi bi-tag"></i> <%= product.Category.nome %>
                                            </p>
                                        <% } %>
                                        <p class="card-text text-muted flex-grow-1 small">
                                            <%= product.descricao ? product.descricao.substring(0, 60) + '...' : '' %>
                                        </p>
                                        <div class="d-flex justify-content-between align-items-center mt-auto">
                                            <span class="h5 text-success mb-0">
                                                R$ <%= parseFloat(product.preco).toFixed(2).replace('.', ',') %>
                                            </span>
                                            <% if (product.estoque > 0) { %>
                                                <% if (user) { %>
                                                    <button class="btn btn-pink btn-sm" 
                                                            onclick="addToCart(<%= product.id %>)">
                                                        <i class="bi bi-cart-plus"></i>
                                                    </button>
                                                <% } else { %>
                                                    <a href="/auth/login" class="btn btn-pink btn-sm">
                                                        <i class="bi bi-cart-plus"></i>
                                                    </a>
                                                <% } %>
                                            <% } else { %>
                                                <span class="badge bg-danger">Esgotado</span>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <div class="text-center py-5">
                        <i class="bi bi-search text-muted" style="font-size: 4rem;"></i>
                        <p class="text-muted mt-3">Nenhum produto encontrado com os filtros selecionados</p>
                        <a href="/products" class="btn btn-pink">Ver Todos os Produtos</a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
    <script>
        async function addToCart(productId) {
            try {
                const response = await fetch('/cart/add', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ productId, quantidade: 1 })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    showAlert(data.message, 'success');
                } else {
                    showAlert(data.message, 'danger');
                }
            } catch (error) {
                console.error('Erro:', error);
                showAlert('Erro ao adicionar ao carrinho', 'danger');
            }
        }
    </script>
</body>
</html>